{
  "name": "@luxfi/wallet-extension",
  "version": "1.0.0",
  "description": "Lux Wallet - A self-custody crypto wallet for the Lux ecosystem",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:safari": "wxt -b safari",
    "build": "wxt build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "build:safari": "wxt build -b safari",
    "build:all": "pnpm build:chrome && pnpm build:firefox && pnpm build:safari",
    "zip": "wxt zip",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox",
    "zip:safari": "wxt zip -b safari",
    "zip:all": "pnpm zip:chrome && pnpm zip:firefox && pnpm zip:safari",
    "test": "playwright test",
    "test:chrome": "pnpm build:chrome && playwright test --project=chrome",
    "test:e2e": "pnpm build:all && playwright test",
    "test:ci": "playwright test --reporter=github,html",
    "test:report": "playwright show-report e2e/test-results/playwright-report",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "validate": "pnpm typecheck && pnpm lint",
    "validate:firefox": "pnpm build:firefox && npx web-ext lint --source-dir .output/firefox-mv2"
  },
  "dependencies": {
    "@wxt-dev/module-react": "1.1.3",
    "ethers": "5.7.2",
    "eventemitter3": "5.0.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native-web": "0.19.13",
    "vite-plugin-node-polyfills": "0.23.0",
    "vite-plugin-svgr": "4.3.0",
    "wxt": "0.20.8"
  },
  "devDependencies": {
    "@playwright/test": "1.50.1",
    "@types/chrome": "0.0.304",
    "@types/node": "22.13.1",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.6",
    "typescript": "5.8.3",
    "web-ext": "8.4.0"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ]
}
