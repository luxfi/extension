{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Lux Wallet Extension",
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.json", "src/declarations.d.ts"],
  "exclude": ["node_modules", ".output", ".wxt", "wxt.config.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["chrome", "node"]
  }
}
